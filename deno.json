{
  "tasks": {
    "play:build": "cd examples/playground && deno task build",
    "play:serve": "cd examples/playground && deno task serve",
    "test:e2e": "deno test -A --shuffle",
    "test:e2e:update": "deno task test:e2e -- --update"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/testing": "jsr:@std/testing@^1.0.3",
    "global-jsdom": "npm:global-jsdom@^25.0.0"
  },
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "dom.asynciterable",
      "deno.ns"
    ]
  }
}
